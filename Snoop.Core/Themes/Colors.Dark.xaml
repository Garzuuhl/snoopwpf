<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <SolidColorBrush x:Key="Snoop.Brushes.Default.Background">#FF2e2e2e</SolidColorBrush>
    <SolidColorBrush x:Key="TabItem.Selected.Background">#FF282c34</SolidColorBrush>

    <LinearGradientBrush x:Key="GridViewColumnHeaderHoverBackground" StartPoint="0,0" EndPoint="0,1" options:Freeze="True">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="#2F4D5F" Offset="0" />
            <GradientStop Color="#1E2737" Offset="1" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="Snoop.Brushes.PropertyGrid.IsExpression" Color="#023e19" options:Freeze="True" />
    <SolidColorBrush x:Key="Snoop.Brushes.EventsView.Handled.Background" Color="LightGreen" options:Freeze="True" />
    <SolidColorBrush x:Key="Snoop.Brushes.EventsView.Handled.Foreground" Color="Black" options:Freeze="True" />
</ResourceDictionary>